<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".WasteItemFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back_arrow"
            android:layout_gravity="start"
            android:layout_marginStart="15dp"
            android:background="@android:color/transparent"
            android:contentDescription="button back" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/translateLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/generalsansregular"
            android:text="Translate"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            app:switchMinWidth="56sp"
            app:switchPadding="10sp"
            app:thumbTint="@drawable/thumb"
            app:trackTint="@drawable/track" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/wasteIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biodegradable1"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/wasteItem" />

        <TextView
            android:id="@+id/wasteItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/generalsansregular"
            android:text="Organic Waste"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/wasteCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/generalsansregular"
            android:text="Biodegradable"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@color/lightblue"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="150dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <ImageView
                android:id="@+id/wasteImage"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp" />

            <TextView
                android:id="@+id/descriptionView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="22sp"
                android:fontFamily="@font/generalsansregular"
                android:lineSpacingExtra="4dp"
                android:text="@string/organicDescription1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/introView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/generalsansregular"
                android:textColor="@color/black"
                android:text="@string/disposalIntro"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="20sp"/>

            <TextView
                android:id="@+id/disposalView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/generalsansregular"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:text="@string/organicDisposal1"
                android:layout_margin="20sp"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>

    </ScrollView>






</LinearLayout>